<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Gallons Input -->
    <TextView
        android:id="@+id/gallonsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Gallons of Water:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/gallonsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Gallons"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Minutes Input -->
    <TextView
        android:id="@+id/minutesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Minutes of Phone Usage:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/minutesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Minutes"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Kilowatts Input -->
    <TextView
        android:id="@+id/kilowattsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Kilowatts of Electricity:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/kilowattsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Kilowatts"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Water Bill Display -->
    <TextView
        android:id="@+id/waterBillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Bill:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/waterBillView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GHS 0.00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Electricity Bill Display -->
    <TextView
        android:id="@+id/electricityBillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electricity Bill:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/electricityBillView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GHS 0.00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Phone Bill Display -->
    <TextView
        android:id="@+id/phoneBillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Bill:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/phoneBillView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GHS 0.00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Total Bill Display -->
    <TextView
        android:id="@+id/totalBillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Bill:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/totalBillView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GHS 0.00"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:padding="16dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/newButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:padding="16dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:padding="16dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:padding="16dp" />

    </LinearLayout>

</LinearLayout>
